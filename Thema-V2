#!/usr/bin/env bash
# Termux Colorful ASCII Banner + Clear + Date + Nama di PS1
# Installer script dengan menu pilihan banner

set -euo pipefail

BANNER_FILE="${HOME}/.config/termux-banner.sh"
mkdir -p "$(dirname "$BANNER_FILE")"

# ==== Input nama tiap kali run ====
NAME_FILE="${HOME}/.config/termux-name.txt"
CHOICE_FILE="${HOME}/.config/termux-banner-choice.txt"

# Warna untuk prompt
RED='\033[1;91m'
GREEN='\033[1;92m'
YELLOW='\033[1;93m'
BLUE='\033[1;94m'
PURPLE='\033[1;95m'
CYAN='\033[1;96m'
WHITE='\033[1;97m'
NC='\033[0m'

clear
echo -e "${CYAN}РЋћРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋЌ${NC}"
echo -e "${CYAN}РЋЉ   TERMUX BANNER INSTALLER v2.0    РЋЉ${NC}"
echo -e "${CYAN}РЋџРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋЮ${NC}\n"

# Input nama
if [[ -f "$NAME_FILE" ]]; then
  OLD_NAME=$(<"$NAME_FILE")
  echo -e "${PURPLE}Masukkan nama baru ${YELLOW}(ENTER untuk tetap pakai: ${GREEN}$OLD_NAME${YELLOW}):${NC} \c"
  read -r USER_NAME
  if [[ -z "$USER_NAME" ]]; then
    USER_NAME="$OLD_NAME"
  fi
else
  echo -e "${GREEN}Masukkan nama untuk ditampilkan di PS1:${NC} \c"
  read -r USER_NAME
fi
echo "$USER_NAME" > "$NAME_FILE"

# Fungsi untuk menampilkan menu banner
show_banner_menu() {
  clear
  echo -e "${CYAN}РЋћРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋЌ${NC}"
  echo -e "${CYAN}РЋЉ        PILIH BANNER FAVORIT        РЋЉ${NC}"
  echo -e "${CYAN}РЋџРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋљРЋЮ${NC}\n"
  
  echo -e "${YELLOW}[1]${NC} ${GREEN}Рўа№ИЈ  Skull Banner${NC}      ${YELLOW}[5]${NC} ${GREEN}­ЪдІ Butterfly Banner${NC}"
  echo -e "${YELLOW}[2]${NC} ${GREEN}­ЪЋи№ИЈ  Spider Banner${NC}     ${YELLOW}[6]${NC} ${GREEN}­ЪЈ│№ИЈ  Auto Random Banner${NC}"
  echo -e "${YELLOW}[3]${NC} ${GREEN}­ЪљЅ Dragon Banner${NC}"
  echo -e "${YELLOW}[4]${NC} ${GREEN}­ЪЈ┤РђЇРўа№ИЈ  One Piece Banner${NC}"
  echo ""
  echo -e "${PURPLE}РћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђРћђ${NC}"
  
  # Cek pilihan sebelumnya
  if [[ -f "$CHOICE_FILE" ]]; then
    OLD_CHOICE=$(<"$CHOICE_FILE")
    case $OLD_CHOICE in
      1) OLD_NAME="Skull" ;;
      2) OLD_NAME="Spider" ;;
      3) OLD_NAME="Dragon" ;;
      4) OLD_NAME="One Piece" ;;
      5) OLD_NAME="Butterfly" ;;
      6) OLD_NAME="Random" ;;
      *) OLD_NAME="None" ;;
    esac
    echo -e "${YELLOW}Pilihan sebelumnya: ${GREEN}$OLD_NAME${NC}"
    echo ""
  fi
  
  echo -e "${BLUE}Pilih nomor banner (1-6) [ENTER=6/Random]:${NC} \c"
  read -r BANNER_CHOICE
  
  if [[ -z "$BANNER_CHOICE" ]]; then
    BANNER_CHOICE="6"
  fi
  
  # Validasi input
  if [[ ! "$BANNER_CHOICE" =~ ^[1-6]$ ]]; then
    echo -e "${RED}Pilihan tidak valid! Menggunakan Random (6)${NC}"
    BANNER_CHOICE="6"
  fi
  
  echo "$BANNER_CHOICE" > "$CHOICE_FILE"
  
  # Konfirmasi pilihan
  case $BANNER_CHOICE in
    1) BANNER_NAME="Skull" ;;
    2) BANNER_NAME="Spider" ;;
    3) BANNER_NAME="Dragon" ;;
    4) BANNER_NAME="One Piece" ;;
    5) BANNER_NAME="Butterfly" ;;
    6) BANNER_NAME="Random" ;;
  esac
  
  echo -e "\n${GREEN}РюЁ Banner terpilih: ${YELLOW}$BANNER_NAME${NC}\n"
  sleep 1
}

# Tampilkan menu
show_banner_menu

# Buat file banner
cat > "$BANNER_FILE" <<'EOF'
# ~/.config/termux-banner.sh
# Prints a colorful ASCII banner on interactive shells.

case $- in
  *i*) ;; 
  *) return 0 2>/dev/null || exit 0 ;;
esac

clear

# ==== Gradient Printer ====
gradient_print () {
  local -a PALETTES=(
    "196 202 208 214 220 190 154 118 82 46 47 48 49 51 39 27 21 57 93 129 165 201"
    "201 198 200 129 93 57 21 27 39 45 51 50 49 48 47 46 82 118 154 190 220 214 208"
    "33 39 45 51 50 49 48 47 46 82 118 154 148 142 136 130 124 160 196"
    "51 87 123 159 195 231 195 159 123 87 51"
  )
  local pick=$((RANDOM % ${#PALETTES[@]}))
  local COLORS=( ${PALETTES[$pick]} )

  local i=0 line
  while IFS= read -r line; do
    local c=${COLORS[$(( i % ${#COLORS[@]} ))]}
    printf "\033[38;5;%sm%s\033[0m\n" "$c" "$line"
    i=$((i+1))
  done
}

